<header> Booking Screen 2</header>
<a href=http://www.hillsidekitchen.co.nz>"Home"</a>

<h1>Hillside Kitchen & Cellar</h1>

<h2>Let's book you in</h2>

<p class="title2">Great! How many people would you like to reserve a table for?</p>

<body class="Booking details step one">
<%= form_for @booking, :url => {:action => 'create', :controller => 'bookings'}, :method => :post do |f| %>
  <div>
    <%= f.label :number_of_visitors %>
    <%= f.text_field :number_of_visitors %>
  </div>

  <h1> What date would you like to eat?</h1>
  <div>
    <%= f.label :time %>
    <%= f.datetime_field :time, class: 'datetimepicker' %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
</body>

<% end %>
<div class="table-map">
  <h1> Now pick a table:</h1>


</div>





<body class="Booking details step two">
<%= form_for @booking, :url => {:action => 'create', :controller => 'bookings'}, :method => :post do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>

</body>
  <%= f.submit %>

<% end %>
