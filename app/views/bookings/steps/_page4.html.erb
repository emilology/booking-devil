<div id="progress-bar">
  <h2 class="off-screen">Booking progress indicator</h2>
  <ol id="progress-steps">
    <li class="progress-step" style="width: 16.67%;">
      <span class="count highlight-index"></span>
    </li>
    <li class="progress-step" style="width: 16.67%;">
      <span class="count highlight-index"></span>
      <span class="description">Time</span>
    </li>
    <li class="progress-step" style="width: 16.67%;">
      <span class="count highlight-index"></span>
      <span class="description">Diet</span>
    </li>
    <li class="progress-step" style="width: 20%;">
      <span class="count highlight-index"></span>
      <!-- if: This is the current step -->
      <span class="current-donation-step off-screen">current donation step:</span>
      <!-- end if -->
      <span class="description">Contact</span>
    </li>
    <li class="progress-step" style="width: 16.67%;">
      <span class="count"></span>
      <span class="description">Confirm</span>
    </li>
  </ol>
</div>
<br></br>
<h1>Contact details</h1>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_area :name %>
</div>

<div class="field">
  <%= f.label :phone_number %><br />
  <%= f.text_area :phone_number %>
</div>
